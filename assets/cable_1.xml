<mujoco model="Cable">

    <include file="empty_world.xml"/>

    <extension>
        <plugin plugin="mujoco.elasticity.cable"/>
    </extension>

    <compiler autolimits="true"/>

    <worldbody>
        <body name="payload" pos="1 0 1">
            <joint type="free"/>
            <geom type="cylinder" size="0.05 0.05" rgba="0 0 1 1" mass="0.5"/>
            <site name="hook_payload" pos="0 0 0.05"/>
        </body>

        <body name="cable" pos="0 0 1">
            <joint type="free"/>
            <composite prefix="actuated" type="cable" curve="0 0 s" count="40 1 1" initial="none">
                <plugin plugin="mujoco.elasticity.cable">
                    <config key="twist" value="0"/>
                    <config key="bend" value="0"/>
                    <config key="vmax" value="0.05"/>
                </plugin>
                <geom type="capsule" size=".005" rgba="0.8 0.2 0.1 1"/>
            </composite>
            <site name="hook_cable" pos="0 0 -0.5"/>
        </body>

        <!-- 
        <site name="site2" pos="0 0 1.5" body="cable"/>
        <equality site1="site1" site2="site2"/> -->
        
    </worldbody>

    <equality>
        <connect body1="payload" body2="cable" anchor="0 0 0">
        <!-- <connect body1="B_last" body2="link7" anchor="0 0 0"> -->
    </equality>

</mujoco>